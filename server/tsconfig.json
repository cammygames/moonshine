{
  "compilerOptions": {
    "target": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "module": "CommonJS",
    "types": ["@citizenfx/server", "@types/node"],
    "lib": ["ES2020"],
  },
  "include": ["./**/*"],
  "exclude": ["**/node_modules", "**/__tests__/*"],
}
